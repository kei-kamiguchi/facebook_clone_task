<div class="post-new">
  <h3 class="page-title">投稿を作成</h3>
  <hr>
  <div class="post-info">
    <%= image_tag current_user.profile_image.url(:small_thumb), class: "icon" if current_user.profile_image && current_user.profile_image.url %>
    <ul>
      <li class="user-name"><%= current_user.name %></li>
    </ul>
  </div>
  <%= form_with(model:@post, local:true) do |form| %>
    <%= form.text_area :content, placeholder: "#{current_user.name}さん、その気持ち、シェアしよう", class: "form-content" %>
    <%= form.label :image, "投稿に画像を追加", class: "image_input_btn" %>
    <%= form.file_field :image, class: "image_form" %>
    <%= form.submit "投稿", class: "submit-btn" %>
  <% end %>
</div>
